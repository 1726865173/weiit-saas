/* assembly/slider/slider.wxss */
/* 侧边栏导航 */
.slider-nav{
  position: fixed;
  right: 10rpx;
  bottom: 200rpx;
  height:200rpx;
  width: 80rpx;
  z-index: 10000;
}
/* 导航上半部分 */
.slider-list{
  height:200rpx;
  position: relative;
  overflow: hidden;
}
.slider-list .slider{
  position: absolute;
  bottom: -340rpx;
  left: 0;
  transition: 0.3s all ease;
}
.slider-list .slider.move{
  bottom: 10rpx;
}
.slider navigator{
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, .7);
  color: #fff;
  line-height: 80rpx;
  text-align: center;
}
.slider navigator:nth-child(1){
  margin-bottom: 20rpx;
}
.slider navigator image{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
/* 导航下面控制部分 */
.slider-arrow{
  position: absolute;
  background: rgba(0, 0, 0, .7);
  bottom: -90rpx;
  left: 0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.slider-arrow image{
  position: absolute;
  left: 50%;
  top: 50%;
  width: 50rpx;
  height: 50rpx;
  transform: translate(-50%, -50%);
}