/* 砍价 */

.cut {
  margin: 0 auto;
  background-color: #f5f5f5;
  overflow: hidden;
}

.cut_box {
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
  position: relative;
}

.cut_show {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  color: #222;
  position: absolute;
  top: 25rpx;
  left: 20rpx;
}


.cut_title, .cut_prompt {
  position: relative;
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #000;
  background-color: #fff;
}



.cut_prompt {
  margin-top: 10rpx;
  line-height: 70rpx;
  color: #999;
  background-color: #fafafa;
}

.time_box {
  margin-bottom: 20rpx;
  text-align: center;
  color: #333;
  font-size: 32rpx;
}

.cut_list {
  width: 48vw;
  margin: 0 1vw;
  padding-bottom: 16rpx;
  margin-bottom: 2vw;
  background-color: #fff;
  float: left;
  position: relative;
}

.cutList_img {
  width: 48vw;
  height: 48vw;
}

.cutList_title {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: 12rpx;
}

.cutList_money {
  color: #f44;
  font-size: 26rpx;
  padding-right: 20rpx;
  padding-top: 14rpx;
}

.cutList_money, .cut_surplus {
  float: left;
}

.cut_surplus {
  padding-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.cut_price, .cut_prices {
  width: 70rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  position: absolute;
  bottom: 14rpx;
  right: 10rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #f44;
  border: 2rpx solid #f44;
}

.cut_prices {
  border: 2rpx solid #f44;
  color: #f44;
  background-color: #fff;
}

