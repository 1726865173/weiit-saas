.audios {
  width: 88%;
  padding: 20rpx 5%;
  height: 80rpx;
  background-color: #fff;
  margin: 10rpx auto;
  position: relative;
}

.audios .pic {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.audios .imgs_box {
  width: 400rpx;
  height: 80rpx;
  position: relative;
}

.audios .imgs_box .dialogue {
  width: 100%;
  height: 100%;
  position: absolute;
}

.audios .imgs_box .back_img {
  width: 40rpx;
  height: 60rpx;
  display: block;
  position: absolute;
  top: 10rpx;
  left: 40rpx;
}

.audios .pic, .audio .imgs_box {
  float: left;
}

.audios .audios_time {
  width: 80rpx;
  position: absolute;
  top: 50%;
  left: 560rpx;
  font-size: 28rpx;
  color: #666;
  transform: translateY(-50%);
}
/* 进度条语音 */

.simple_audios {
  width: 94%;
  height: 100rpx;
  padding: 0 3%;
  line-height: 100rpx;
  overflow: hidden;
  background-color: #f0f0f0;
  position: relative;
}

.simple_audios .iconfont {
  width: 100rpx;
  height: 90rpx;
  margin-top: 5rpx;
  font-size: 90rpx;
  color: #1aad19;
  overflow: hidden
}

.simple_audios .slider {
  width: 550rpx;
  position: absolute;
  top: 5rpx;
  left: 130rpx;
}


