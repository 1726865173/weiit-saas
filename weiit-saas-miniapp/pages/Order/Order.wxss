/* pages/Order/Order.wxss */
@import "../template/template.wxss";

.order_bar {
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 10;
}

.contents {
  margin-top: 80rpx;
}

/* 支付方式 */
.commodity_attr_box {
  height: 500rpx
}
.wechat {
  height: 100rpx;
  position: relative;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
}

.radios {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  border: 1rpx solid #d5d5d5;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
}

.selectRadio {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  border: 1rpx solid #09bb07;
  background-color: #09bb07;
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
}

.icon-icon-test {
  font-size: 28rpx;
  color: #fff;
  position: absolute;
  left: 25rpx;
  top: 50%;
  transform: translateY(-50%);
}

.wechat:last-child {
  border-bottom: 1rpx solid #f0f0f0;
}

.wechat radio {
  position: absolute;
  top: 45%;
  left: 20rpx;
  transform: scale(0.8) translateY(-50%);
}

.wechat .img {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  left: 90rpx;
  top: 15rpx;
}

.wechat .titles {
  font-size: 30rpx;
  color: #333;
  position: absolute;
  top: 11rpx;
  left: 180rpx;
}

.wechat text {
  font-size: 24rpx;
  color: #999;
  position: absolute;
  bottom: 14rpx;
  left: 180rpx;
}


/* 确定*/

.confirmBtn {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #ffdc4b;
  border-radius: 10rpx;
  position: absolute;
  bottom: 20rpx;
  left: 5%;
  color: #fff
}
