/* pages/Progress/Progress.wxss */

.pages {
  background-color: #fff;
  position: relative;
  height: 500rpx;
  color: #999;
  border-bottom: 6rpx solid #f5f5f5;
}

.black {
  color: #000;
}

.tx_title {
  background-color: #fff;
  line-height: 90rpx;
  padding-left: 50rpx;
}

.Box {
  width: 100rpx;
  height: 100rpx;
  margin: 0 30rpx 0 40rpx;
  position: relative;
  top: 30rpx;
  float: left;
}

.max {
  width: 100rpx;
  height: 100rpx;
}
.min,.red_min{
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  background-color: #999;
  position: relative;
  left: 40rpx;
  top: 40rpx;
}
.red_min{
  background-color: red
}
.Apply, .Handle, .Result {
  height: 160rpx;
  line-height: 160rpx;
}

.two, .two_time {
  line-height: 100rpx;
}

.two_time {
  font-size: 30rpx;
  line-height: 30rpx;
  padding-left: 170rpx
}

.tx_money, .account {
  background-color: #fff;
  line-height: 80rpx;
  padding-left: 30rpx;
  color: #666;
}

.money_num {
  position: absolute;
  right: 50rpx;
  color: #000;
}

.Got_it {
  width: 70%;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  position: fixed;
  bottom: 50rpx;
  left: 15%;
  border-radius: 10rpx;
  background-color: #ffdc4b;
}
