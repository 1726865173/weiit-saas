/* pages/search/search.wxss */
@import "../template/template.wxss";

.searchBox {
  overflow: hidden;
}

.toTheEnd {
  width: 100%;
  height: 80rpx;
  margin-bottom: 10rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.navbar .item:first-child .iconfont {
  display: none;
}

/* 搜索样式 */

.search {
  width: 96%;
  padding: 18rpx 2%;
  line-height: 80rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  font-size: 30rpx;
  display: flex;
  display: -webkit-flex;
}

.search_ipt, .icon-sousuo {
  height: 80rpx;
  background-color: #fff;
}

.icon-sousuo {
  width: 60rpx;
  text-align: center;
  font-size: 40rpx;
}

.search_ipt {
  width: 84%;
  border-radius: 4rpx;
}

.serach_btn {
  width: 16%;
  background-color: #d0d0d0;
  text-align: center;
}
