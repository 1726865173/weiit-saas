/* pages/buySuccess/buySuccess.wxss */

.viewBox {
  background-color: #fff;
  height: 600rpx;
  text-align: center;
}

.icon-xuanzhong {
  font-size: 160rpx;
  border-radius: 80rpx;
  color: #09bb07;
  text-align: center;
  margin-top: 80rpx;
}

.buySuccess {
  color: #09bb07;
}

.amount {
  font-size: 90rpx;
  margin: 10rpx 0;
}

.orderAmount {
  font-size: 34rpx;
  color: #808080;
}

.list {
  border-top: 1rpx solid #f0f0f0;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  padding: 0 20rpx;
  color: #454545;
  position: relative;
}
.listLeft{
  font-size: 34rpx;
  color: #333
}
.type {
  position: absolute;
  left: 220rpx;
  top: 0rpx;
  font-size: 32rpx;
  color: #999;
}

.listRight {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 30rpx;
  color: #999;
}

.confirm {
  width: 90%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 10rpx;
  background-color: #FFDC4B;
  margin: 0 auto;
  margin-top: 100rpx;
  color: #fff
}
