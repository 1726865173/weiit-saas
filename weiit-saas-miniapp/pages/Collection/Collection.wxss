@import "../template/template.wxss";

/* 收藏宝贝列表 */

.box {
  position: relative;
  height: 210rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.Collection {
  position: relative;
  z-index: 1;
}

.Collection .baby {
  margin-top: 15rpx;
  margin-left: 15rpx;
  width: 180rpx;
  height: 180rpx;
}

.Collection .title {
  width: 500rpx;
  position: absolute;
  top: 10rpx;
  left: 210rpx;
  color: #333;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.Collection .money {
  color: #ec534e;
  position: absolute;
  font-size: 28rpx;
  top: 150rpx;
  left: 210rpx;
}

.delete {
  width: 80rpx;
  height: 80rpx;
  z-index: 10;
  text-align: center;
  line-height: 80rpx;
  position: absolute;
  bottom: 4rpx;
  right: 20rpx;
}

.delete text {
  color: #888;
  font-size: 40rpx;
}

.no_more {
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999;
}
