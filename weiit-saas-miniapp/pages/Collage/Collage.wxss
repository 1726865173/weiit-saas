/* pages/detail/detail.wxss */
@import "../logo/logo.wxss";
@import "../../wxParse/wxParse.wxss";

.icon-shoucang2 {
  color: red;
}

.hidden {
  height: 100%;
  overflow: hidden;
}

swiper {
  width: 100vw;
  height: 100vw;
  background-color: #fff;
}

swiper image {
  width: 100%;
  height: 100%;
}

.detail_title {
  line-height: 35rpx;
  background-color: #fff;
  padding: 20rpx 20rpx 0 20rpx;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.detail_box {
  overflow: hidden;
}

.detail_lable, .detail_right {
  float: left;
  padding: 15rpx 0;
  background-color: #fff;
  height: 100rpx;
  line-height: 50rpx;
}

.detail_lable {
  width: 18%;
  padding-left: 2%;
  font-size: 32rpx;
  color: #ec534e;
}

.start_price {
  text-decoration: line-through;
  font-size: 28rpx;
  color: #999;
}

.detail_right {
  width: 77%;
  padding-right: 3%;
  text-align: right;
  position: relative;
}

.lable_list {
  overflow: hidden;
  position: absolute;
  right: 16rpx;
  top: 20rpx;
  display: flex;
  display: -webkit-flex;
  float: right;
}

.lable {
  width: 98rpx;
  height: 35rpx;
  font-size: 24rpx;
  text-align: center;
  color: #ec534e;
  border-radius: 10rpx;
  margin: 0 6rpx;
  padding: 0 5rpx;
  line-height: 35rpx;
  border: 1rpx solid #ec534e;
}

.single_num {
  font-size: 24rpx;
  color: #999;
  position: absolute;
  right: 30rpx;
  bottom: 8rpx;
}

/* 物品信息 */

.introduce {
  width: 100%;
  overflow: hidden;
  background-color: #fff;
  margin: 20rpx 0;
  padding: 14rpx 0;
}

.infor_list {
  width: 100%;
  padding-left: 20rpx;
  line-height: 45rpx;
  display: flex;
  display: -webkit-flex;
  float: left;
}

.infor_list view:first-child {
  width: 150rpx;
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.infor_list view:last-child {
  width: 500rpx;
  padding-left: 10rpx;
  font-size: 26rpx;
  color: #333;
}

.btns {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  margin: 20rpx 0;
  color: #666;
  background-color: #fff;
}
.btns text{
  float: right;
  padding-right: 20rpx
}
.btns view {
  float: left;
}
.btns view:first-child{
  padding-right: 50rpx
}
.btns view:last-child{
  line-height: 80rpx;
  font-size: 26rpx;
  color: #666
}
/* 商品信息、属性 */

.navbar .item.active:after {
  width: 100%;
}

/* 运费 */

.freight {
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  color: #666;
  margin: 20rpx 0;
  background-color: #fff;
}

/* 拼单列表 */

.Fight_alone {
  background-color: #fff;
  /* max-height: 316rpx; */
  overflow: hidden;
  padding-bottom: 1rpx;
}

.Fight_num {
  padding: 0 20rpx;
  height: 90rpx;
  font-size: 36rpx;
  line-height: 90rpx;
  overflow: hidden;
}

.more {
  float: right;
  font-size: 28rpx;
  color: #999;
}

.Fight_num .icon-youjiantouda {
  font-size: 26rpx;
}

.fightList_box {
  max-height: 226rpx;
  overflow: auto;
}

.Fight_list {
  height: 112rpx;
  border-top: 1rpx solid #f5f5f5;
  position: relative;
}

.Fight_img {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 22rpx;
  left: 16rpx;
  border-radius: 35rpx;
}

.Fight_name {
  font-size: 28rpx;
  color: #333;
  position: absolute;
  top: 40rpx;
  left: 98rpx;
}

.Fight_Lack {
  font-size: 28rpx;
  font-weight: bold;
  position: absolute;
  right: 200rpx;
  top: 20rpx;
}

.people_num {
  color: #fc8c35;
}

.Surplus_time {
  font-size: 24rpx;
  position: absolute;
  top: 56rpx;
  right: 200rpx;
}

.go_Fight {
  width: 124rpx;
  height: 51rpx;
  text-align: center;
  line-height: 51rpx;
  color: #fff;
  font-size: 24rpx;
  background-color: #fc8c35;
  border-radius: 10rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

/* 参与某一个拼单 */

.join {
  position: absolute;
}

.join .icon-cha1 {
  font-size: 40rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}

.quota {
  text-align: center;
}

.quota text {
  color: #f44;
}

.pic_box {
  margin: 20rpx 0;
  height: 300rpx;
}

.pic_box .pics {
  width: 100rpx;
  height: 100rpx;
  margin: 0 19rpx;
  margin-bottom: 20rpx;
  border-radius: 50rpx;
  float: left;
}

.pic_null, .pics {
  float: left;
  overflow: hidden;
}

.pic_null {
  width: 98rpx;
  height: 98rpx;
  margin: 0 18rpx;
  margin-bottom: 20rpx;
  border: 1rpx dotted #999;
  border-radius: 50rpx;
  text-align: center;
  line-height: 98rpx;
  float: left;
}

.pic_null text {
  font-size: 70rpx;
}

.btn {
  width: 60%;
  height: 65rpx;
  line-height: 65rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  background-color: #fc8c35;
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

/* 底部购买 */

.purchase {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  z-index: 2;
}

.purchase_left, .purchase_right {
  float: left;
}

