/* pages/teams/teams.wxss */
@import "../Template_/Template_.wxss";

.pages {
  width: 100%;
  overflow-x: hidden;
  padding-bottom: 105rpx;
}

.order_bar {
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 10;
}

.navbar {
  height: 100rpx;
}

.navbar .item {
  line-height: 100rpx;
}

.navbar .item.active {
  color: #000;
  background-color: #f0f0f0;
}

.navbar .item.active:after {
  height: 0;
}

