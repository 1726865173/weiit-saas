@import "../Template_/Template_.wxss";
@import "../template/template.wxss";

.give_mode {
  font-size: 34rpx;
  line-height: 90rpx;
  text-align: center;
}

.Delivery {
  font-size: 30rpx;
  color: #333;
  line-height: 80rpx;
  position: relative;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.Delivery radio {
  position: absolute;
  right: 30rpx;
  top: 0;
  transform: scale(0.7);
}

.Coupon_name {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #333;
  border-top: 1rpx solid #f0f0f0;
  position: relative;
}

.Coupon_name radio {
  transform: scale(0.6);
  float: left;
}

.Coupon_name text {
  color: #000;
  float: left;
}

.Coupon_name .icon-youjiantouda {
  position: absolute;
  right: 20rpx;
}

.coupon_list {
  height: 800rpx;
}

.message input {
  width: 520rpx;
  z-index: 0;
}

.message {
  color: #333;
  font-size: 30rpx;
  margin-bottom: 14rpx;
}

/* 支付方式 */

.wechat {
  height: 100rpx;
  position: relative;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
}

.radios {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  border: 1rpx solid #d5d5d5;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
}

.selectRadio {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  border: 1rpx solid #09bb07;
  background-color: #09bb07;
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
}

.icon-icon-test {
  font-size: 28rpx;
  color: #fff;
  position: absolute;
  left: 25rpx;
  top: 50%;
  transform: translateY(-50%);
}

.wechat:last-child {
  border-bottom: 1rpx solid #f0f0f0;
}

.wechat radio {
  position: absolute;
  top: 45%;
  left: 20rpx;
  transform: scale(0.8) translateY(-50%);
}

.wechat .img {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  left: 90rpx;
  top: 15rpx;
}

.wechat .titles {
  font-size: 30rpx;
  color: #333;
  position: absolute;
  top: 15rpx;
  left: 180rpx;
}

.wechat text {
  font-size: 24rpx;
  color: #999;
  position: absolute;
  bottom: 14rpx;
  left: 180rpx;
}

/* 折扣明细 */

.Settlement {
  margin-top: 20rpx;
  margin-bottom: 120rpx;
  background-color: #fff;
  font-size: 32rpx;
  color: #444;
}

.Settlement view {
  height: 60rpx;
  line-height: 60rpx;
  width: 94%;
  margin: 0 auto;
  text-align: left;
}

.Settlement view text {
  float: right;
}

/* 购物车为空 */

.icon-gouwuche-kong {
  font-size: 200rpx;
  display: block;
  text-align: center;
  margin-top: 45%;
  margin-bottom: 20rpx;
  color: #ddd;
}

.promptNull {
  text-align: center;
  color: #333;
  font-size: 32rpx;
}

.btnNull {
  width: 90%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 20rpx;
  background-color: #ffdc48;
  margin: 0 auto;
  margin-top: 40rpx;
  font-size: 36rpx;
  color: #fff;
}
